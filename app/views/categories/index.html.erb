<div class="container">
  
  <h1 align="center">Listing All Categories</h1>
  
  <div class="row justify-content-md-center pagination">
    
    <div class="col-10 col-md-auto">
      <%= will_paginate(@categories, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
    </div>
    
  </div>

  <% @categories.each do |category| %>

    <ul class="listing">
      
      <div class="row justify-content-md-center">
        
        <div class="col-6">
      
          <div class="card center">

            <div class="card-block">

              <li class="article-title"><%= link_to "#{category.name}", category_path(category) %></li>
              
              <li>
                
                <small><%= pluralize(category.articles.count, "article") %></small>
                
              </li>

            </div>

          </div>
          
        </div>
        
      </div>
    
    </ul>
  
  <% end %>
  
  <div class="row justify-content-md-center pagination">
    
    <div class="col-10 col-md-auto">
      <%= will_paginate(@categories, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
    </div>
    
  </div>
  
</div>