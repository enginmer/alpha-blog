<% if @article.errors.any? %>

  <h2>The following errors prevented the article from getting created:</h2>

  <ul><% @article.errors.full_messages.each do |msg| %>
    
    <li><%= msg %></li>
    
    <% end %>
    
  </ul>

<% end %>
    
<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
  <div class="form-group row">
      
    <%= f.label :title, class: "col-2 col-form-label" %>
    
    <div class="col-10">
          
      <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      
    </div>
  
  </div>
    
  <div class="form-group row">
      
    <%= f.label :description, class: "col-2 col-form-label" %>
    
    <div class="col-10">
          
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
      
    </div>
  
  </div>
    
  <div class="form-group row">
    
    <div class="col-2">
    </div>
    
    <div class="col-10">
      
      <%= f.submit class: "btn btn-primary btn-lg" %>
      
    </div>
          
  </div>

<% end %>

<div class="row justify-content-md-center">
  
  <div class="col-12 col-md-auto">

    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]

  </div>
  
</div>
    
